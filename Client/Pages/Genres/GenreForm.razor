<EditForm Model="Genre" OnValidSubmit="OnValidSubmit">
    <DataAnnotationsValidator/>
    <div class="form-group">
        <label>Name: </label>
        <div>
            <InputText class="form-control" @bind-Value="@Genre.Name"/>
            <ValidationMessage For="@(() => Genre.Name)"/>
        </div>
    </div>
    <button class="btn btn-success mt-3" type="submit">Save Changes</button>
</EditForm>

@code {
    [Parameter] public Genre Genre { get; set; }
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}
